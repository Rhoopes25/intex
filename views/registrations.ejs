<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrations - Ella Rises</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
<%- include('partials/navbar') %>

<div class="page-header">
    <div class="container">
        <h1><i class="fas fa-clipboard-list me-3"></i>Registrations</h1>
        <p>Manage all participant registrations</p>
    </div>
</div>

<div class="container mb-5">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="fas fa-list me-2"></i>All Registrations</span>
            <button class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#addRegistrationModal">
                <i class="fas fa-plus me-2"></i>Add Registration
            </button>
        </div>

        <div class="card-body">

            <!-- Success Messages -->
            <% if (success === 'added') { %>
                <div class="alert alert-success">Registration added successfully.</div>
            <% } %>
            <% if (success === 'edited') { %>
                <div class="alert alert-success">Registration updated successfully.</div>
            <% } %>
            <% if (success === 'deleted') { %>
                <div class="alert alert-success">Registration deleted successfully.</div>
            <% } %>

            <!-- Server-side Search Form -->
            <form method="GET" action="/registrations" class="mb-3 d-flex">
                <input type="text" name="search" class="form-control me-2" placeholder="Search registrations..."
                       value="<%= search || '' %>">
                <button type="submit" class="btn btn-primary">Search</button>
            </form>

            <% if (registrations.length === 0) { %>
                <div class="text-center py-5">
                    <i class="fas fa-clipboard-list" style="font-size: 4rem; color: var(--text-light);"></i>
                    <h4 class="mt-3">No registrations found</h4>
                </div>
            <% } else { %>

                <div class="table-responsive">
                    <table class="table table-hover" id="registrationsTable">
                        <thead>
                            <tr>
                                <th>Participant</th>
                                <th>Event</th>
                                <th>Status</th>
                                <th>Attended?</th>
                                <th>Check-In Time</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>

                        <% registrations.forEach(reg => { %>
                            <tr>
                                <td><%= reg.participantfirstname %> <%= reg.participantlastname %></td>
                                <td><%= reg.eventname %></td>
                                <td><%= reg.registrationstatus || 'N/A' %></td>
                                <td>
                                    <% if (reg.registrationattendedflag === true) { %>
                                        <span class="badge bg-success">Yes</span>
                                    <% } else if (reg.registrationattendedflag === false) { %>
                                        <span class="badge bg-danger">No</span>
                                    <% } else { %>
                                        <span class="badge bg-secondary">N/A</span>
                                    <% } %>
                                </td>
                                <td><%= reg.registrationcheckintime || 'N/A' %></td>
                                <td><%= reg.registrationcreatedat %></td>

                                <td>
                                    <button class="btn btn-primary btn-sm me-2" data-bs-toggle="modal"
                                            data-bs-target="#editRegistrationModal<%= reg.registrationid %>">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <form method="POST" action="/registrations/delete/<%= reg.registrationid %>" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm"
                                                onclick="return confirm('Are you sure?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>

                            <!-- Edit Modal -->
                            <div class="modal fade" id="editRegistrationModal<%= reg.registrationid %>" tabindex="-1">
                                <div class="modal-dialog modal-md">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5>Edit Registration</h5>
                                            <button class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>

                                        <form method="POST" action="/registrations/edit/<%= reg.registrationid %>">
                                            <div class="modal-body">
                                                <div class="mb-3">
                                                    <label class="form-label">Status</label>
                                                    <select class="form-select" name="status">
                                                        <option value="">Select...</option>
                                                        <option value="attended" <%= reg.registrationstatus === "attended" ? "selected" : "" %>>Attended</option>
                                                        <option value="no-show" <%= reg.registrationstatus === "no-show" ? "selected" : "" %>>No Show</option>
                                                        <option value="cancelled" <%= reg.registrationstatus === "cancelled" ? "selected" : "" %>>Cancelled</option>
                                                    </select>
                                                </div>

                                                <div class="mb-3">
                                                    <label class="form-label">Attended Flag</label>
                                                    <select class="form-select" name="attendedflag">
                                                        <option value="">N/A</option>
                                                        <option value="true" <%= reg.registrationattendedflag === true ? "selected" : "" %>>Yes</option>
                                                        <option value="false" <%= reg.registrationattendedflag === false ? "selected" : "" %>>No</option>
                                                    </select>
                                                </div>

                                                <div class="mb-3">
                                                    <label>Check-In Time</label>
                                                    <input type="datetime-local" class="form-control"
                                                           name="checkin" value="<%= reg.formattedCheckIn %>">
                                                </div>
                                            </div>

                                            <div class="modal-footer">
                                                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-success">Save</button>
                                            </div>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        <% }) %>

                        </tbody>
                    </table>
                </div>

                <!-- Load More -->
                <% if (registrations.length === limit) { %>
                    <div class="text-center mt-3">
                        <form method="GET" action="/registrations">
                            <input type="hidden" name="offset" value="<%= offset + limit %>">
                            <% if (search) { %>
                                <input type="hidden" name="search" value="<%= search %>">
                            <% } %>
                            <button type="submit" class="btn btn-outline-primary">Next Page</button>
                        </form>
                    </div>
                <% } %>

            <% } %>

        </div>
    </div>
</div>

<!-- Add Registration Modal -->
<div class="modal fade" id="addRegistrationModal" tabindex="-1">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Add New Registration</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form method="POST" action="/registrations/add">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Participant</label>
                        <select class="form-select" name="participantid" required>
                            <% participants.forEach(p => { %>
                                <option value="<%= p.participantid %>">
                                    <%= p.participantfirstname %> <%= p.participantlastname %>
                                </option>
                            <% }) %>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Event</label>
                        <select class="form-select" name="eventid" required>
                            <% events.forEach(e => { %>
                                <option value="<%= e.occurrenceid %>"><%= e.eventname %></option>
                            <% }) %>
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Add</button>
                </div>
            </form>

        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
