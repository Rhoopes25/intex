<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Milestone - Ella Rises</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

    <!-- NAVBAR -->
    <%- include('partials/navbar') %>
    <img src="/butterfly.jpg" alt="" class="floating-clipart butterfly-1">
    <img src="/flower1.jpg" alt="" class="floating-clipart flower-top-right">
    <img src="/flower2.jpg" alt="" class="floating-clipart flower-hero-left">
    <img src="/flower3.jpg" alt="" class="floating-clipart flower-hero-right">
    <img src="/butterfly.jpg" alt="" class="floating-clipart butterfly-2">

    <!-- MATCH LOGIN PAGE LAYOUT -->
    <div class="login-body">

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-6">

                    <div class="login-card">

                        <div class="login-header">
                            <i class="fas fa-trophy"></i>
                            <h2>Add Your Milestone</h2>
                            <p class="mb-0">Share your achievements with the Ella Rises community</p>
                        </div>

                        <div class="p-5">

                            <% if (success) { %>
                                <div class="alert alert-success">
                                    <i class="fas fa-check-circle me-2"></i><%= success %>
                                </div>
                            <% } %>

                            <% if (error) { %>
                                <div class="alert alert-danger">
                                    <i class="fas fa-exclamation-circle me-2"></i><%= error %>
                                </div>
                            <% } %>

                            <form method="POST" action="/userMilestones/add">

                                <div class="mb-4">
                                    <label for="title" class="form-label">
                                        <i class="fas fa-trophy"></i> Milestone Title
                                    </label>
                                    <input type="text" class="form-control" id="title" name="title"
                                           required placeholder="e.g., Won Science Fair, Accepted to University">
                                </div>

                                <div class="mb-4">
                                    <label for="date" class="form-label">
                                        <i class="fas fa-calendar"></i> Milestone Date
                                    </label>
                                    <input type="date" class="form-control" id="date" name="date" required>
                                </div>

                                <button type="submit" class="btn btn-primary w-100 py-3">
                                    <i class="fas fa-check me-2"></i> Add Milestone
                                </button>

                            </form>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
        <!-- USER MILESTONES TABLE (Donate-style container) -->
            <div class="container mt-5 mb-5">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-10 col-lg-8">

                        <div class="card mt-4">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="fas fa-list me-2"></i>Your Milestones
                                </h5>
                            </div>

                            <div class="card-body p-4">

                                <% if (!userMilestones || userMilestones.length === 0) { %>
                                    <div class="text-center py-4">
                                        <i class="fas fa-trophy" style="font-size: 3rem; color: var(--text-light);"></i>
                                        <p class="mt-3 mb-0">You havenâ€™t added any milestones yet.</p>
                                    </div>

                                <% } else { %>

                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Date</th>
                                                    <th>Milestone</th>
                                                    <th class="text-end">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% userMilestones.forEach(m => { %>
                                                    <tr>
                                                        <td><%= new Date(m.milestonedate).toLocaleDateString() %></td>
                                                        <td><%= m.milestonetitle %></td>
                                                        <td class="text-end">
                                                            <form method="POST" action="/userMilestones/delete/<%= m.milestoneid %>">
                                                                <button type="submit" class="btn btn-danger btn-sm"
                                                                    onclick="return confirm('Delete this milestone?');">
                                                                    <i class="fas fa-trash"></i>
                                                                </button>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>

                                <% } %>

                            </div>
                        </div>

                    </div>
                </div>
            </div>




    <!-- FOOTER -->
    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
