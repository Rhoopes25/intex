<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register for Event - Ella Rises</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

    <!-- NAVBAR -->
    <%- include('partials/navbar') %>
    <img src="/butterfly.jpg" alt="" class="floating-clipart butterfly-1">
    <img src="/flower1.jpg" alt="" class="floating-clipart flower-top-right">
    <img src="/flower2.jpg" alt="" class="floating-clipart flower-hero-left">
    <img src="/flower3.jpg" alt="" class="floating-clipart flower-hero-right">
    <img src="/butterfly.jpg" alt="" class="floating-clipart butterfly-2">

    <!-- EVENT REGISTRATION CARD -->
    <div class="login-body">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-7">

                    <div class="login-card">

                        <div class="login-header">
                            <i class="fas fa-calendar-check"></i>
                            <h2>Event Registration</h2>
                            <p class="mb-0">Confirm your attendance</p>
                        </div>

                        <div class="p-5">

                            <% if (error) { %>
                                <div class="alert alert-danger">
                                    <i class="fas fa-exclamation-circle me-2"></i><%= error %>
                                </div>
                            <% } %>

                            <!-- EVENT INFO -->
                            <div class="mb-4">
                                <h3><%= event.eventname %></h3>
                                <hr>
                                <p><i class="fas fa-calendar me-2"></i> <strong>Date:</strong> <%= new Date(event.eventdatetimestart).toLocaleDateString() %></p>
                                <p><i class="fas fa-clock me-2"></i> <strong>Time:</strong> <%= new Date(event.eventdatetimestart).toLocaleTimeString() %> - <%= new Date(event.eventdatetimeend).toLocaleTimeString() %></p>
                                <p><i class="fas fa-map-marker-alt me-2"></i> <strong>Location:</strong> <%= event.eventlocation %></p>
                                <p><i class="fas fa-users me-2"></i> <strong>Capacity:</strong> <%= event.eventcapacity %></p>
                            </div>

                            <!-- REGISTRATION FORM -->
                            <form method="POST" action="/eventregister/<%= event.occurrenceid %>">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    By registering, you confirm your attendance at this event.
                                </div>
                                <button type="submit" class="btn btn-primary w-100 py-3">
                                    <i class="fas fa-check me-2"></i> Confirm Registration
                                </button>
                            </form>

                            <!-- BACK BUTTON -->
                            <div class="text-center mt-4">
                                <a href="/events" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i> Back to Events
                                </a>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- SUCCESS MODAL -->
    <% if (success) { %>
        <div class="modal fade" id="successModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-success text-white">
                        <h5 class="modal-title">
                            <i class="fas fa-check-circle me-2"></i> Success
                        </h5>
                    </div>
                    <div class="modal-body">
                        <%= success %><br>
                        You can see all your registered events in your <a href="/profile">profile</a>.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" id="modalOkBtn">OK</button>
                    </div>
                </div>
            </div>
        </div>

        <script>
            document.addEventListener("DOMContentLoaded", function() {
                // Initialize Bootstrap modal
                var modalEl = document.getElementById('successModal');
                var modal = new bootstrap.Modal(modalEl);
                modal.show();
    
                // Redirect on OK
                document.getElementById('modalOkBtn').addEventListener('click', function() {
                    window.location.href = "/events";
                });
            });
        </script>
    <% } %>

    <!-- FOOTER -->
    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
