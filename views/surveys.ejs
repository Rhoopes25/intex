<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Surveys - Ella Rises</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
<%- include('partials/navbar') %>

<img src="/butterfly.jpg" alt="" class="floating-clipart butterfly-1">
<img src="/flower2.jpg" alt="" class="floating-clipart flower-hero-left">
<img src="/flower3.jpg" alt="" class="floating-clipart flower-hero-right">

<div class="page-header">
  <div class="container text-center">
    <h1><i class="fas fa-clipboard-list me-3"></i>All Surveys</h1>
    <p>View participant feedback and satisfaction scores</p>
  </div>
</div>

<div class="container mb-5">
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <span><i class="fas fa-chart-bar me-2"></i>Survey Responses</span>
      <button class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#addSurveyModal">
        <i class="fas fa-plus me-2"></i>Add Survey
      </button>
    </div>

    <div class="card-body">

      <!-- Search Form -->
      <form method="GET" action="/surveys" class="mb-3 d-flex gap-2">
        <input type="text" name="search" class="form-control" placeholder="Search by participant, event, or date..." value="<%= search %>">
        <button type="submit" class="btn btn-primary">Search</button>
      </form>

      <% if (surveys.length === 0) { %>
        <div class="text-center py-5">
          <i class="fas fa-clipboard-list" style="font-size: 4rem; color: var(--text-light);"></i>
          <h4 class="mt-3">No surveys found</h4>
          <p class="text-muted">Survey responses will appear here after events</p>
        </div>
      <% } else { %>

        <!-- Surveys Table -->
        <div class="table-responsive">
          <table class="table table-hover" id="surveysTable">
            <thead>
              <tr>
                <th>Date</th>
                <th>Participant</th>
                <th>Event</th>
                <th>Satisfaction</th>
                <th>Usefulness</th>
                <th>Instructor</th>
                <th>Recommendation</th>
                <th>Overall</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% const getBadgeColor = score => score >= 4 ? '#98B59D' : score >= 3 ? '#ffc107' : '#dc3545'; %>
              <% surveys.forEach(survey => { %>
                <tr>
                  <td><%= new Date(survey.surveysubmissiondate).toLocaleDateString() %></td>
                  <td><%= survey.participantfirstname %> <%= survey.participantlastname %></td>
                  <td><%= survey.eventname || 'N/A' %></td>
                  <td><span class="badge" style="background-color: <%= getBadgeColor(survey.surveysatisfactionscore) %>"><%= survey.surveysatisfactionscore %>/5</span></td>
                  <td><span class="badge" style="background-color: <%= getBadgeColor(survey.surveyusefulnessscore) %>"><%= survey.surveyusefulnessscore %>/5</span></td>
                  <td><span class="badge" style="background-color: <%= getBadgeColor(survey.surveyinstructorscore) %>"><%= survey.surveyinstructorscore %>/5</span></td>
                  <td><span class="badge" style="background-color: <%= getBadgeColor(survey.surveyrecommendationscore) %>"><%= survey.surveyrecommendationscore %>/5</span></td>
                  <td><strong><%= parseFloat(survey.surveyoverallscore).toFixed(1) %>/5</strong></td>
                  <td>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#viewSurveyModal<%= survey.surveyid %>">
                      <i class="fas fa-eye"></i>
                    </button>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editSurveyModal<%= survey.surveyid %>">
                      <i class="fas fa-edit"></i>
                    </button>
                    <form action="/surveys/delete/<%= survey.surveyid %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this survey?');">
                      <button class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <!-- Load More -->
        <% if (surveys.length === limit) { %>
          <div class="text-center mt-3">
            <form method="GET" action="/surveys">
              <input type="hidden" name="offset" value="<%= offset + limit %>">
              <input type="hidden" name="search" value="<%= search %>">
              <button type="submit" class="btn btn-outline-primary">Load More</button>
            </form>
          </div>
        <% } %>

        <!-- Summary Statistics -->
        <div class="mt-4 p-4 bg-light rounded-3">
          <h5 class="mb-3">Summary Statistics</h5>
          <div class="row text-center">
            <div class="col-md-3 mb-3">
              <div class="text-muted">Total Surveys</div>
              <div class="h3 mb-0"><%= surveys.length %></div>
            </div>
            <div class="col-md-3 mb-3">
              <div class="text-muted">Avg Overall Score</div>
              <div class="h3 mb-0">
                <%= (surveys.reduce((sum, s) => sum + parseFloat(s.surveyoverallscore), 0) / surveys.length).toFixed(1) %>/5
              </div>
            </div>
            <div class="col-md-3 mb-3">
              <div class="text-muted">Avg Satisfaction</div>
              <div class="h3 mb-0">
                <%= (surveys.reduce((sum, s) => sum + s.surveysatisfactionscore, 0) / surveys.length).toFixed(1) %>/5
              </div>
            </div>
            <div class="col-md-3 mb-3">
              <div class="text-muted">Avg Recommendation</div>
              <div class="h3 mb-0">
                <%= (surveys.reduce((sum, s) => sum + s.surveyrecommendationscore, 0) / surveys.length).toFixed(1) %>/5
              </div>
            </div>
          </div>
        </div>

      <% } %>

    </div>
  </div>
</div>

<!-- Add Survey Modal -->
<div class="modal fade" id="addSurveyModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <form action="/surveys/add" method="POST">
        <div class="modal-header">
          <h5 class="modal-title">Add New Survey</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label">Registration</label>
            <select name="registrationid" class="form-select" required>
              <% registrations.forEach(r => { %>
                <option value="<%= r.registrationid %>"><%= r.participantfirstname %> <%= r.participantlastname %> - <%= r.eventname %></option>
              <% }) %>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Satisfaction Score</label>
            <input type="number" name="satisfactionscore" class="form-control" min="1" max="5" step="1" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Usefulness Score</label>
            <input type="number" name="usefulnessscore" class="form-control" min="1" max="5" step="1" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Instructor Score</label>
            <input type="number" name="instructorscore" class="form-control" min="1" max="5" step="1" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Recommendation Score</label>
            <input type="number" name="recommendationscore" class="form-control" min="1" max="5" step="1" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Comments</label>
            <textarea name="comments" class="form-control" rows="3"></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-success">Add Survey</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
