<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Profile - Ella Rises</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

    <!-- NAVBAR at the top -->
    <%- include('partials/navbar') %>
    <img src="/butterfly.jpg" alt="" class="floating-clipart butterfly-1">
    <img src="/flower1.jpg" alt="" class="floating-clipart flower-top-right">
    <img src="/flower2.jpg" alt="" class="floating-clipart flower-hero-left">
    <img src="/flower3.jpg" alt="" class="floating-clipart flower-hero-right">
    <img src="/butterfly.jpg" alt="" class="floating-clipart butterfly-2">

    <!-- SIGNUP CONTENT AREA (pink background, centered) -->
    <div class="signup-body">

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10 col-xl-9">

                    <div class="signup-card">
                        <div class="signup-header">
                            <i class="fas fa-user-plus"></i>
                            <h2>Join Ella Rises</h2>
                            <p class="mb-0">Create your profile and start your journey</p>
                        </div>

                        <div class="p-5">

                            <% if (error) { %>
                                <div class="alert alert-danger">
                                    <i class="fas fa-exclamation-circle"></i> <%= error %>
                                </div>
                            <% } %>

                            <form method="POST" action="/createProfile">
                                <input type="hidden" name="returnTo" value="<%= returnTo %>">
                                <h5 class="mb-3"><i class="fas fa-user-circle me-2"></i>Account Information</h5>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="firstname" class="form-label">
                                            <i class="fas fa-user"></i> First Name *
                                        </label>
                                        <input type="text" class="form-control" id="firstname" name="firstname" required placeholder="Jane">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="lastname" class="form-label">
                                            <i class="fas fa-user"></i> Last Name *
                                        </label>
                                        <input type="text" class="form-control" id="lastname" name="lastname" required placeholder="Doe">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="username" class="form-label">
                                            <i class="fas fa-at"></i> Username *
                                        </label>
                                        <input type="text" class="form-control" id="username" name="username" required placeholder="janedoe">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="email" class="form-label">
                                            <i class="fas fa-envelope"></i> Email Address *
                                        </label>
                                        <input type="email" class="form-control" id="email" name="email" required placeholder="jane.doe@example.com">
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label for="password" class="form-label">
                                        <i class="fas fa-lock"></i> Password *
                                    </label>
                                    <input type="password" class="form-control" id="password" name="password" required minlength="6" placeholder="At least 6 characters">
                                    <small class="text-muted">Must be at least 6 characters</small>
                                </div>

                                <hr class="my-4">

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="dob" class="form-label">Date of Birth</label>
                                        <input type="date" class="form-control" id="dob" required name="dob">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="phone" class="form-label">Phone Number</label>
                                        <input 
                                            type="tel" 
                                            class="form-control phone-input" 
                                            id="phone" 
                                            name="phone" 
                                            required 
                                            placeholder="(555) 123-4567"
                                        >
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-5 mb-3">
                                        <label for="city" class="form-label">City</label>
                                        <input type="text" class="form-control" id="city" name="city" required placeholder="Provo">
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label for="state" class="form-label">State</label>
                                        <input type="text" class="form-control" id="state" name="state" maxlength="2" required placeholder="UT">
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="zip" class="form-label">ZIP Code</label>
                                        <input type="text" class="form-control" id="zip" name="zip" required placeholder="84601">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="school" class="form-label">School or Employer</label>
                                        <input type="text" class="form-control" id="school" name="school" required placeholder="Brigham Young University">
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <label for="field" class="form-label">Field of Interest</label>
                                        <select class="form-select" id="field" required name="field">
                                            <option value="">Select a field...</option>
                                            <option value="STEM">STEM</option>
                                            <option value="Arts">Arts</option>
                                            <option value="Both">Both</option>
                                        </select>
                                    </div>
                                    
                                </div>

                                <button type="submit" class="btn btn-primary w-100 py-3 mb-4">
                                    <i class="fas fa-check me-2"></i> Create Profile
                                </button>

                            </form>

                            <div class="text-center mb-3">
                                <p class="text-muted mb-3">Already have an account?</p>
                                <a href="/login?returnTo=<%= returnTo %>" class="btn btn-outline-primary w-100 py-2">
                                    <i class="fas fa-sign-in-alt me-2"></i> Login
                                </a>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

    <!-- FOOTER at the very bottom -->
    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelectorAll(".phone-input").forEach(input => {
            input.addEventListener("input", function (e) {
                let digits = e.target.value.replace(/\D/g, "").substring(0, 10);
        
                let formatted = digits;
                if (digits.length > 6) {
                    formatted = `(${digits.substring(0,3)}) ${digits.substring(3,6)}-${digits.substring(6)}`;
                } else if (digits.length > 3) {
                    formatted = `(${digits.substring(0,3)}) ${digits.substring(3)}`;
                } else if (digits.length > 0) {
                    formatted = `(${digits}`;
                }
        
                e.target.value = formatted;
            });
        });
        </script>
</body>
</html>
